{
  "security.workspace.trust.untrustedFiles": "open",
  // ***************************§
  // ** globals and basics
  // ***************************
  "window.zoomLevel": -0.8,
  "window.titleBarStyle": "custom",
  "explorer.compactFolders": false,
  "debug.allowBreakpointsEverywhere": true,
  "editor.minimap.scale": 1,
  "gitlens.showWelcomeOnInstall": false,
  "material-icon-theme.showWelcomeMessage": false,
  "terminal.integrated.inheritEnv": false,
  "files.trimTrailingWhitespace": true,
  "explorer.confirmDragAndDrop": false,
  "workbench.tree.indent": 24,
  "workbench.editor.wrapTabs": true,
  "workbench.editor.decorations.badges": true,
  "workbench.editor.decorations.colors": true,
  "workbench.startupEditor": "none",
  "workbench.colorCustomizations": {
    // hins colors
    "editorInlayHint.background": "#293038",
    "editorInlayHint.foreground": "#6e7e99",

    "[Soft Colors]": {
      "tab.activeBackground": "#2b313f",
      "editor.background": "#1c212c",
      "editor.lineHighlightBackground": "#1f242f"
    },

    "[bliss-ui]": {
      "tab.activeBackground": "#474e5e",
      "tab.hoverBackground": "#4a608b",
      "sideBar.border": "#404654",
      "panel.border": "#474e5e",
      "terminal.border": "#474e5e",
      "editorLineNumber.foreground": "#6d6d6d",
      "editorLineNumber.activeForeground": "#cccccc",
      "editorIndentGuide.background": "#3a4457",
      "editorIndentGuide.activeBackground": "#7f8489",
      "editorSuggestWidget.background": "#30343e",
      "editorSuggestWidget.foreground": "#f1f1f1",
      "editorSuggestWidget.selectedBackground": "#1b6cdf",
      "editorSuggestWidget.highlightForeground": "#fff",
      "editorSuggestWidget.focusHighlightForeground": "#fff",
      "separators.functions.borderColor": "#55466a",
      "separators.classes.borderColor": "#55466a",
      "separators.constructors.borderColor": "#55466a",
      "separators.methods.borderColor": "#55466a",
      "separators.structs.borderColor": "#55466a",
      "separators.interfaces.borderColor": "#55466a"
    },

    "[React Theme]": {
      "editorCursor.foreground": "#3bdefe",
      "editorLineNumber.foreground": "#495872",
      "editorSuggestWidget.background": "#363a44",
      "scrollbar.shadow": "#25282f",
      "editor.lineHighlightBackground": "#2c2f36",
      "editor.selectionBackground": "#145068",
      "tab.activeBackground": "#484d59",
      "tab.inactiveForeground": "#8897a6",
      //"editor.background": "#2c303a",
      "separators.functions.borderColor": "#116786",
      "separators.interfaces.borderColor": "#116786",
      "separators.methods.borderColor": "#116786",

      "separators.structs.borderColor": "#116786",
      "terminal.foreground": "#516a84",
      "terminalCursor.foreground": "#0ee1e8"
    },

    "[Soft Colors (No Italics)]": {
      "titleBar.activeBackground": "#1e232e",
      "tab.activeBackground": "#313948",
      "tab.activeBorderTop": "#00b7ff",
      "editorGroupHeader.tabsBackground": "#1e232e",
      "sideBarSectionHeader.background": "#222732",
      "sideBar.background": "#1e232e",
      "panel.background": "#222732",
      "terminal.background": "#222732",
      //separators
      "separators.functions.borderColor": "#116786",
      "separators.interfaces.borderColor": "#116786",
      "separators.methods.borderColor": "#116786",
      "separators.structs.borderColor": "#116786"
    }
  },
  // ***************************
  // ** editor general settings
  // ***************************
  // 'Lekton Nerd Font Mono', 'Inconsolata Nerd Font Mono', 'Operator Mono Lig', Menlo, Monaco,'MesloLGS NF'",
  //"editor.fontFamily": "'Operator Mono Lig', 'Lekton Nerd Font Mono'",
  //"editor.fontFamily": " 'Oxygen Mono', 'Lekton Nerd Font Mono'",
  //"editor.fontFamily": " 'Space Mono', 'Cutive Mono'",
  //"editor.fontFamily": " 'Share Tech Mono', 'Lekton Nerd Font Mono'",
  //"editor.fontFamily": " 'Chivo Mono', 'Cutive Mono', 'Operator Mono Lig', 'Lekton Nerd Font Mono'",
  //"editor.fontFamily": " 'Cutive Mono', 'Operator Mono Lig', 'Lekton Nerd Font Mono'",
  //"editor.fontFamily": " 'Overpass Mono', 'Cutive Mono', 'Operator Mono Lig', 'Lekton Nerd Font Mono'",
  "editor.fontFamily": " 'Azeret Mono', 'Cutive Mono', 'Operator Mono Lig', 'Lekton Nerd Font Mono'",
  //"editor.snippetSuggestions": "top",
  "editor.tabSize": 2,
  "editor.lineHeight": 23,
  "editor.fontSize": 13,
  "editor.fontWeight": "100",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 27,
  "editor.occurrencesHighlight": true,
  "editor.cursorBlinking": "smooth",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.linkedEditing": true,
  "editor.bracketPairColorization.enabled": false,
  "editor.detectIndentation": false,
  "editor.guides.bracketPairs": true,
  "editor.suggestOnTriggerCharacters": true,
  "editor.suggestSelection": "first",
  "editor.suggest.localityBonus": true,
  "editor.fontLigatures": true,
  "editor.autoClosingQuotes": "always",
  // "editor.quickSuggestions": {
  //   "other": true,
  //   "comments": false,
  //   "strings": false
  // },
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.wordBasedSuggestions": true,
  "editor.inlayHints.enabled": "off",
  //"editor.parameterHints.enabled": true,
  "editor.tokenColorCustomizations": {
    // **************************
    // ** universal overrides
    // **************************
    //"comments": "#526381",
    "comments": "#7185a8",

    "[React Theme]": {
      "textMateRules": [
        {
          "scope": "comment.line.double-slash.go",
          "settings": {
            "foreground": "#566783"
          }
        }
      ]
    }
  },
  // *****************************
  // ** terminal
  // *****************************
  //"terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.fontFamily": "Lekton Nerd Font Mono",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.tabs.enabled": false,
  // *****************************
  // ** languages settings
  // *****************************
  // *****************************
  // ** Settings for html emmet css
  // *****************************
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "files.associations": {
    "*tmpl": "html"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  // ******************************
  // ** javascript language support
  // ******************************
  "javascript.format.insertSpaceBeforeFunctionParenthesis": false,
  "javascript.format.semicolons": "insert",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.quoteStyle": "single",
  "[javascript]": {
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    },
    "editor.suggestOnTriggerCharacters": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "separators.enabledSymbols": ["Classes", "Functions", "Methods"],
    "separators.maxDepth": 1,
    "editor.language.colorizedBracketPairs": [
      ["[", "]"],
      ["(", ")"]
    ]
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[css]": {
    // switch off separators
    "separators.enabledSymbols": []
  },
  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.suggest.insertMode": "replace",
    "gitlens.codeLens.scopes": ["document"]
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },
  "[python]": {
    "gitlens.codeLens.symbolScopes": ["!Module"],
    "editor.wordBasedSuggestions": false,
    "editor.defaultFormatter": "ms-python.python",
    "editor.tabSize": 4,
    "editor.formatOnType": true
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.insertSpaces": false,
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.suggest.snippetsPreventQuickSuggestions": false
  },
  "[cpp][c]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.wordBasedSuggestions": false,
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true
  },

  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "window.title": "${activeEditorMedium}",
  "window.titleSeparator": "  —  ",
  "svelte.enable-ts-plugin": true,
  "prettier.arrowParens": "avoid",
  "go.toolsManagement.autoUpdate": true,
  "haskell.manageHLS": "GHCup",
  "[haskell]": {},
  "files.autoSave": "afterDelay",
  "workbench.colorTheme": "bliss-ui",
  "workbench.iconTheme": "vscode-icons",
  "workbench.tree.renderIndentGuides": "always"
}
