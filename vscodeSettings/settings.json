{
  "security.workspace.trust.untrustedFiles": "open",

  // ***************************
  // globals and basics
  // ***************************
  "window.zoomLevel": -1.15,
  "window.titleBarStyle": "custom",
  "explorer.compactFolders": false,
  "debug.allowBreakpointsEverywhere": true,
  "editor.minimap.scale": 2,
  "gitlens.showWelcomeOnInstall": false,
  "material-icon-theme.showWelcomeMessage": false,
  "terminal.integrated.inheritEnv": false,
  "files.trimTrailingWhitespace": true,
  "explorer.confirmDragAndDrop": false,
  // ***************************
  // workbench
  // ***************************
  "workbench.tree.indent": 32,
  "workbench.editor.wrapTabs": true,
  "workbench.editor.decorations.badges": true,
  "workbench.editor.decorations.colors": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.editorAssociations": {
    "*.db": "sqlite-viewer.option"
  },
  "workbench.colorCustomizations": {
    "[Grey Theme]": {
      //editor
      "scrollbarSlider.background": "#3f3f3f",
      "titleBar.activeBackground": "#2a2a2c",
      "activityBar.background": "#2a2a2c",
      "editorLineNumber.foreground": "#636363",
      "editorLineNumber.activeForeground": "#c7c7c7",
      "editorCursor.foreground": "#ffc105",
      "panel.border": "#646464",
      "panelTitle.inactiveForeground": "#828282",
      "statusBar.background": "#2b2929",
      "minimap.background": "#272727",
      "editor.background": "#2a2a2a",
      "tab.activeForeground": "#cbcbcb",
      "tab.activeBorderTop": "#d442b2",
      "tab.activeBorder": "#ed6ace",
      "tree.indentGuidesStroke": "#7a7a7a",
      // separators
      "separators.interfaces.borderColor": "#424450",
      "separators.methods.borderColor": "#424450",
      "separators.functions.borderColor": "#424450",
      "separators.constructors.borderColor": "#424450",
      "separators.namespaces.borderColor": "#424450",
      "separators.enums.borderColor": "#424450",
      "separators.structs.borderColor": "#424450",
      "separators.classes.borderColor": "#424450"
    },
    "[Electron]": {
      // editor
      "sideBarSectionHeader.background": "#1c212e",
      "sideBar.border": "#191e28",
      "tab.activeBackground": "#464b62",
      "editorCursor.foreground": "#ffc401",
      "editorLineNumber.activeForeground": "#00f7ff",
      // separators
      "separators.interfaces.borderColor": "#313650",
      "separators.methods.borderColor": "#313650",
      "separators.functions.borderColor": "#313650",
      "separators.constructors.borderColor": "#313650",
      "separators.namespaces.borderColor": "#313650",
      "separators.enums.borderColor": "#313650",
      "separators.structs.borderColor": "#313650",
      "separators.classes.borderColor": "#313650",
      // terminal
      "terminal.foreground": "#8f8f8f",
      "terminalCursor.foreground": "#ffae00",
      // status bar
      "statusBar.background": "#141820",
      // panel and term
      "panel.border": "#3c627d"
    },
    "[Radical]": {
      // sidebar, frame and panel
      "titleBar.border": "#000F1A",
      "titleBar.activeForeground": "#766174",
      "activityBar.border": "#000F1A",
      "sideBar.border": "#52213a",
      "sideBar.foreground": "#70888a",
      "list.inactiveSelectionBackground": "#1d1c2e",
      "panel.border": "#642b49",
      "statusBar.border": "#331424",
      "terminal.border": "#52213a",
      // editor
      "tab.activeBackground": "#44233b",
      "editorCursor.foreground": "#ffae00",
      "editorCursor.background": "#170326",
      // theme palette adjustments
      "editor.background": "#1b1a2b",
      "terminal.background": "#1b1a2b",
      "panel.background": "#1b1a2b",
      "breadcrumb.background": "#1b1a2b",
      "tab.activeBorder": "#bc0a8c",
      "tab.inactiveBackground": "#16152c",
      "tab.border": "#53243d",
      // separators
      "separators.interfaces.borderColor": "#313650",
      "separators.methods.borderColor": "#313650",
      "separators.functions.borderColor": "#313650",
      "separators.constructors.borderColor": "#313650",
      "separators.namespaces.borderColor": "#313650",
      "separators.enums.borderColor": "#313650",
      "separators.structs.borderColor": "#313650",
      "separators.classes.borderColor": "#313650",
      // terminal
      "terminalCursor.foreground": "#ff0000",
      "terminalCursor.background": "#ffffff",
      "terminal.foreground": "#6d8889",
      "terminal.ansiBrightBlack": "#777"
    }
  },
  // ***************************
  // editor general settings
  // ***************************
  //"editor.fontFamily": " 'Lekton Nerd Font Mono', 'InconsolataGo Nerd Font Mono', 'Operator Mono Lig', Menlo, Monaco",
  //"editor.fontFamily": " 'Inconsolata Nerd Font Mono', 'Operator Mono Lig', Menlo, Monaco",
  //"editor.fontFamily": "'Operator Mono Lig', 'Lekton Nerd Font Mono', 'InconsolataGo Nerd Font Mono', Menlo, Monaco",
  //"editor.fontFamily": "'MesloLGS NF'",
  "editor.fontFamily": "'Monofur Nerd Font'",
  //"editor.fontFamily": "'UbuntuMono Nerd Font'",
  //"editor.fontFamily": "'Hack Nerd Font'",
  //"editor.fontFamily": "'Comic Mono'",

  "editor.tabSize": 2,
  "editor.lineHeight": 21,
  "editor.fontSize": 16.5,
  "editor.fontWeight": "100",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 27,
  "editor.cursorBlinking": "smooth",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.linkedEditing": true,
  "editor.bracketPairColorization.enabled": false,
  "editor.detectIndentation": false,
  "editor.guides.bracketPairs": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.tokenColorCustomizations": {
    // **************************
    // universal overrides
    // **************************
    "textMateRules": [],
    "[Electron]": {
      "textMateRules": [
        {
          "scope": "entity.name.function.go, constant.character.format.placeholder.other.python",
          "settings": {
            "foreground": "#e56ace"
          }
        },
        {
          "scope": "constant.character.escape.go, constant.other.placeholder.go",
          "settings": {
            "foreground": "#81ffbc"
          }
        },
        {
          "scope": "string.quoted.double.go",
          "settings": {
            "foreground": "#bdcee0"
          }
        },
        {
          "scope": "entity.name.import.go",
          "settings": {
            "foreground": "#78af7a"
          }
        }
      ]
    },
    "[Radical]": {
      "textMateRules": [
        {
          "scope": "keyword",
          "settings": {
            "foreground": "#e94fa6"
            //"fontStyle": "bold"
          }
        },
        {
          "scope": "string.quoted, string.quoted.double",
          "settings": {
            //"foreground": "#9393ca"
            "foreground": "#9f9fc9"
          }
        },
        {
          "scope": "keyword.operator, storage.type",
          "settings": {
            "foreground": "#fe9fcc"
          }
        },
        {
          "scope": "variable.other.object.js",
          "settings": {
            "foreground": "#a0c0d0"
          }
        },
        {
          "scope": "variable.language.this.js",
          "settings": {
            "foreground": "#03b3ca"
          }
        },
        {
          "scope": "support.type.object.module.js",
          "settings": {
            "foreground": "#b3e646"
          }
        }
      ]
    }
  },
  "javascript.format.insertSpaceBeforeFunctionParenthesis": false,
  "javascript.format.semicolons": "insert",
  // *****************************
  // terminal
  // *****************************
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.tabs.enabled": false,
  // *****************************
  // Settings for Go programming
  // *****************************
  "go.toolsManagement.autoUpdate": true,
  "[go]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "golang.go"
  },
  "gopls": {
    "analyses": {
      "composites": false
    }
  },
  // *****************************
  // Settings for python
  // *****************************
  "python.defaultInterpreterPath": "/Users/ed/.pyenv/versions/3.9.1/envs/pydev",
  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-python.python",
    "gitlens.codeLens.symbolScopes": ["!Module"],
    "editor.wordBasedSuggestions": false
  },
  // *****************************
  // Settings for html emmet css
  // *****************************
  "[html]": {
    //"editor.defaultFormatter": "HookyQR.beautify",
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "files.associations": {
    "*tmpl": "html"
  },
  // *****************************
  // javascript language support
  // *****************************
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.quoteStyle": "single",
  "[svelte]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    //"editor.defaultFormatter": "svelte.svelte-vscode",
    "separators.enabledSymbols": ["Classes", "Functions", "Methods"],
    "separators.maxDepth": 1
  },
  "[javascript]": {
    "editor.quickSuggestions": true,
    "editor.suggestOnTriggerCharacters": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "separators.enabledSymbols": ["Classes", "Functions", "Methods"],
    "separators.maxDepth": 1,
    "editor.language.colorizedBracketPairs": [
      ["[", "]"],
      ["(", ")"]
    ]
  },
  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.suggest.insertMode": "replace",
    "gitlens.codeLens.scopes": ["document"]
  },

  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,
  // "autoimport.filesToScan": "**/*.{ts,tsx,js,jsx}",
  // "svelte.enable-ts-plugin": true,
  "prettier.tabWidth": 2,
  "auto-close-tag.activationOnLanguage": ["html", "svelte"],
  "typescript.updateImportsOnFileMove.enabled": "always",
  "liveServer.settings.donotVerifyTags": true,
  "auto-close-tag.excludedTags": [
    "html",
    "body",
    "area",
    "base",
    "br",
    "col",
    "command",
    "embed",
    "hr",
    "img",
    "input",
    "keygen",
    "link",
    "meta",
    "param",
    "source",
    "track",
    "wbr"
  ],
  "liveServer.settings.donotShowInfoMsg": true,
  "python.formatting.provider": "black",
  "editor.fontLigatures": true,
  "editor.autoClosingQuotes": "always",
  //"window.title": "${activeEditorMedium}${separator}${rootName}",
  "window.title": "${activeEditorMedium}",
  "window.titleSeparator": "  —  ",
  "workbench.colorTheme": "Grey Theme"
}
