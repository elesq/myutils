{
    "security.workspace.trust.untrustedFiles": "open",

    // ***************************
    // globals and basics
    // ***************************
    "window.zoomLevel": -1,
    "window.titleBarStyle": "custom",
    "explorer.compactFolders": false,
    "debug.allowBreakpointsEverywhere": true,
    "editor.minimap.scale": 2,
    "gitlens.showWelcomeOnInstall": false,
    "material-icon-theme.showWelcomeMessage": false,
    // ***************************
    // workbench
    // ***************************
    "workbench.tree.indent": 32,
    "workbench.editor.wrapTabs": true,
    "workbench.editor.decorations.badges": true,
    "workbench.editor.decorations.colors": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "none",
    "workbench.colorCustomizations": {
        // ***************************
        // monokai pro palletes
        // ***************************
        "[Monokai Pro]": {
            "editorSuggestWidget.selectedBackground": "#297fbc",
            "separators.classes.borderColor": "#3f4148",
            "separators.interfaces.borderColor": "#3f4148",
            "separators.methods.borderColor": "#3f4148",
            "separators.functions.borderColor": "#3f4148",
            "separators.constructors.borderColor": "#3f4148",
            "separators.namespaces.borderColor": "#3f4148",
            //sidebar
            "sideBar.background": "#262326",
            "sideBar.border": "#242124",
            "sideBarSectionHeader.background": "#262326",
            // editor tab
            "tab.activeBackground": "#403e41",
            "editorCursor.foreground": "#d705d7",
            "editorCursor.background": "#ffffff",
            // panels and terminals
            "terminalCursor.foreground": "#ffae00",
            "terminal.foreground": "#8f9296",
            "terminal.background": "#363437",
            "terminal.border": "#2b2235",
            "panel.border": "#2b2235",
            "panel.background": "#363437"
        },
        "[Monokai Pro (Filter Octagon)]": {
            //"editorSuggestWidget.selectedBackground": "#297fbc",
            "editorSuggestWidget.selectedBackground": "#305183",
            //"editorSuggestWidget.selectedForeground": "#000000",
            //"editorSuggestWidget.selectedIconForeground": "#000000",
            "separators.classes.borderColor": "#373c4e",
            "separators.interfaces.borderColor": "#373c4e",
            "separators.methods.borderColor": "#373c4e",
            "separators.functions.borderColor": "#373c4e",
            "separators.constructors.borderColor": "#373c4e",
            "separators.namespaces.borderColor": "#373c4e",
            "separators.enums.borderColor": "#373c4e",
            // editor tab
            "tab.activeBackground": "#2b5585",
            "editorCursor.foreground": "#e787e7",
            "editorCursor.background": "#ffffff",
            // panels and terminals
            "terminalCursor.foreground": "#ffae00",
            "terminal.foreground": "#75869b",
            //"terminal.background": "#1c1e29",
            "terminal.background": "#21222e",
            "terminal.border": "#3d3b4c",
            "panel.border": "#3d3b4c",
            //"panel.background": "#1c1e29"
            "panel.background": "#21222e",
            "editorLineNumber.activeForeground": "#71fffa",
            "gitDecoration.untrackedResourceForeground": "#489e9e"
        },
        "[Electronic Moonlight]": {
            "editorSuggestWidget.selectedBackground": "#305183",
            "separators.classes.borderColor": "#2b3867",
            "separators.interfaces.borderColor": "#2b3867",
            "separators.methods.borderColor": "#2b3867",
            "separators.functions.borderColor": "#2b3867",
            "separators.constructors.borderColor": "#2b3867",
            "separators.namespaces.borderColor": "#2b3867",
            "separators.enums.borderColor": "#2b3867",
            "separators.structs.borderColor": "#2b3867",
            "tab.activeBorder": "#594c86",
            "tab.activeBackground": "#352c53",
            "activityBar.background": "#181b2b",
            "editor.background": "#232537",
            "editorCursor.foreground": "#05cdcd",
            "editorCursor.background": "#ffffff",
            "editorLineNumber.activeForeground": "#00d5ff",
            "sideBar.border": "#2b3b5d",
            // panels
            "panel.border": "#457292",
            "panel.background": "#2e3042",
            "terminal.border": "#457292",
            "terminal.background": "#2e3042",
            "terminalCursor.foreground": "#ffae00"
        }
    },
    // ***************************
    // editor general settings
    // ***************************
    "editor.fontFamily": " 'Lekton Nerd Font Mono', 'InconsolataGo Nerd Font Mono', 'Operator Mono Lig', Menlo, Monaco",
    "editor.lineHeight": 23,
    "editor.fontSize": 15,
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 15,
    "editor.cursorBlinking": "smooth",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.linkedEditing": true,
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.bracketPairs": true,
    "editor.tokenColorCustomizations": {
        // **************************
        // universal overrides
        // **************************
        "textMateRules": [
            {
                "scope": "string.interpolated, string.quoted.double.go",
                "settings": {
                    "fontStyle": "italic"
                }
            }
        ],
        // ***************************
        // monokai pro customisations.
        // ***************************
        "[Monokai Pro][Monokai Pro (Filter Octagon)]": {
            "textMateRules": [
                {
                    "scope": "variable.other.readwrite.js, variable.other.property.js, variable.other.object.js",
                    "settings": {
                        "foreground": "#ced0d4"
                    }
                },
                {
                    "scope": "meta.object-literal.key.js",
                    "settings": {
                        "foreground": "#deaae6"
                    }
                }
            ]
        },

        "[Electronic Moonlight]": {
            "textMateRules": [
                {
                    "scope": "meta.brace.round.js, meta.function-call.without-arguments.js, meta.new-class.without-arguments.js",
                    "settings": {
                        //"foreground": "#ec97e3"
                    }
                }
            ]
        }
    },
    "javascript.format.insertSpaceBeforeFunctionParenthesis": false,
    "javascript.format.semicolons": "insert",
    // *****************************
    // terminal
    // *****************************
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "terminal.integrated.defaultLocation": "editor",
    "terminal.integrated.tabs.enabled": false,
    // *****************************
    // Settings for Go programming
    // *****************************
    "go.toolsManagement.autoUpdate": true,
    "[go]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.formatOnSave": true
    },
    "gopls": {
        "analyses": {
            "composites": false
        }
    },
    // *****************************
    // Settings for html emmet css
    // *****************************
    "[html]": {
        //"editor.defaultFormatter": "vscode.html-language-features",
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    "emmet.showSuggestionsAsSnippets": true,
    "files.associations": {
        "*tmpl": "html"
    },
    // *****************************
    // javascript language support
    // *****************************
    "[svelte]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "svelte.svelte-vscode",
        "separators.enabledSymbols": ["Classes", "Functions", "Methods"],
        "separators.maxDepth": 1
    },
    "[javascript]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "separators.enabledSymbols": ["Classes", "Functions", "Methods"],
        "separators.maxDepth": 1,
        "editor.language.colorizedBracketPairs": [
            ["[", "]"],
            ["(", ")"]
        ]
    },
    "[json]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
        "editor.suggest.insertMode": "replace",
        "gitlens.codeLens.scopes": ["document"]
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.preferences.quoteStyle": "single",
    "editor.detectIndentation": false,
    "workbench.colorTheme": "Electronic Moonlight",
    "prettier.jsxSingleQuote": true,
    "prettier.singleQuote": true,
    "autoimport.filesToScan": "**/*.{ts,tsx,js,jsx}",
    "emmet.triggerExpansionOnTab": true,
    "svelte.enable-ts-plugin": true,
    "files.trimTrailingWhitespace": true,
    "prettier.tabWidth": 4,
    "auto-close-tag.activationOnLanguage": ["html", "svelte"]
}
