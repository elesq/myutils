{
    "security.workspace.trust.untrustedFiles": "open",
    // ------------------------------
    // window
    // ------------------------------
    "window.commandCenter": false,
    "window.zoomLevel": -0.6,
    "window.title": "${activeEditorMedium}",
    "window.titleSeparator": "  â€”  ",
    "explorer.compactFolders": false,
    "workbench.colorTheme": "Tiniri Dark",
    "workbench.tree.indent": 36,
    "workbench.externalBrowser": "chrome",
    "workbench.editor.wrapTabs": true,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.editor.decorations.badges": true,
    "workbench.editor.decorations.colors": true,
    "workbench.startupEditor": "none",
    "workbench.editorAssociations": {
        "*.db": "default"
    },
    // ------------------------------
    // workbench customisations
    // ------------------------------
    "workbench.colorCustomizations": {
        "editorInlayHint.background": "#2f3a45",
        "editorInlayHint.foreground": "#6e7e99",
        "notebook.editorBackground": "#2a2c33",
        "separators.classes.borderColor": "#4a4a5a",
        "separators.constructors.borderColor": "#4a4a5a",
        "separators.enums.borderColor": "#4a4a5a",
        "separators.functions.borderColor": "#4a4a5a",
        "separators.interfaces.borderColor": "#4a4a5a",
        "separators.methods.borderColor": "#4a4a5a",
        "separators.namespaces.borderColor": "#4a4a5a",
        "separators.structs.borderColor": "#4a4a5a",

        "[habamix]": {
            "titleBar.activeBackground": "#252526",
            "activityBar.border": "#3e3e40",
            "activityBar.background": "#252526",
            "sideBar.foreground": "#889198",
            "sideBar.border": "#39393b",
            "terminalCursor.foreground": "#67b0e0",
            "editorCursor.foreground": "#ffb70e",
            "editorLineNumber.foreground": "#4b4e57",
            "editorLineNumber.activeForeground": "#cad5db",
            "editor.lineHighlightBackground": "#343337",
            "editor.lineHighlightBorder": "#313034",
            "editor.background": "#313034",
            "editorGutter.background": "#2f2e32",
            "panel.background": "#2f2e32",
            "terminal.background": "#2f2e32",
            "tab.inactiveBackground": "#2f2e32",
            "tab.activeBackground": "#45424e",
            "tab.activeBorderTop": "#d38b2c",
            "tab.activeBorder": "#313034",
            "statusBar.border": "#454545",
            "statusBar.background": "#3b3b3b",
            "editorHoverWidget.background": "#1d1f21",
            "editorHoverWidget.border": "#c0791c"
        },

        "[Tiniri Dark]": {
            "tab.activeBackground": "#37393d",
            "editorHoverWidget.background": "#2b2c2f",
            "editorHoverWidget.border": "#b77319",
            "editorSuggestWidget.border": "#b77319",
            "editorSuggestWidget.background": "#2b2c2f"
        }
    },
    // ------------------------------
    // apc customisations
    // ------------------------------
    "apc.font.family": "Dank Mono",
    // ------------------------------
    // editor customisations
    // ------------------------------
    "editor.formatOnSave": true,
    // "editor.fontFamily": " 'Dank Mono', 'JetBrainsMono Nerd Font', 'Lekton Nerd Font Mono'",
    //"editor.fontFamily": " 'DM Mono', 'JetBrainsMono Nerd Font', 'Lekton Nerd Font Mono'",
    "editor.fontFamily": " 'JetBrainsMono Nerd Font', 'Lekton Nerd Font Mono'",
    "editor.linkedEditing": true,
    "editor.defaultColorDecorators": true,
    "editor.minimap.autohide": true,
    "editor.minimap.scale": 1,
    "editor.lineHeight": 23,
    "editor.fontSize": 14,
    "editor.fontWeight": "100",
    "editor.cursorStyle": "block",
    "editor.occurrencesHighlight": "singleFile",
    "editor.cursorBlinking": "smooth",
    "editor.insertSpaces": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.bracketPairColorization.enabled": false,
    "editor.detectIndentation": false,
    "editor.guides.bracketPairs": true,
    "editor.suggestOnTriggerCharacters": true,
    "editor.suggest.localityBonus": true,
    "editor.fontLigatures": true,
    "editor.autoClosingQuotes": "languageDefined",
    "editor.suggestSelection": "first",
    //"editor.lineNumbers": "relative",
    "editor.tokenColorCustomizations": {
        //"comments": "#5f7191"
        "comments": "#63676c",

        "[Tiniri Dark]": {
            "textMateRules": [
                {
                    "scope": "punctuation.definition.string",
                    "settings": {
                        "foreground": "#ffcfaa"
                    }
                }
            ]
        }
    },
    "catppuccin.accentColor": "blue",
    "terminal.integrated.fontFamily": "Lekton Nerd Font Mono",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.inheritEnv": false,
    "emmet.showSuggestionsAsSnippets": true,
    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "files.associations": {
        "*tmpl": "html",
        "*.tmpl": "html"
    },
    // ------------------------------
    // per language customisations
    // ------------------------------
    "[css]": {
        "editor.suggest.insertMode": "replace",
        "editor.tabSize": 4
    },
    "[cucumber.feature]": {
        "editor.defaultFormatter": "alexkrechik.cucumberautocomplete"
    },
    // "[go]": {
    //     "editor.defaultFormatter": "golang.go",
    //     "editor.tabSize": 4,
    //     "editor.insertSpaces": false,
    //     "editor.formatOnSave": true,
    //     "editor.codeActionsOnSave": {
    //         "source.organizeImports": "always"
    //     }
    // },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.tabSize": 4
    },
    "[javascript]": {
        "editor.maxTokenizationLineLength": 2500,
        "editor.tabSize": 4,
        "prettier.tabWidth": 4
    },
    "[json]": {
        "editor.tabSize": 4,
        "editor.suggest.insertMode": "replace"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
        "prettier.jsxSingleQuote": true,
        "prettier.tabWidth": 2,
        "separators.enabledSymbols": [
            "Enums",
            "Interfaces",
            "Classes",
            "Constructors",
            "Methods",
            "Functions"
        ],
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "[python]": {
        "editor.tabSize": 4,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "gitlens.codeLens.symbolScopes": ["!Module"],
        "editor.wordBasedSuggestions": "off"
    },
    "[sql]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "mtxr.sqltools"
    },
    // ------------------------------
    // misc
    // ------------------------------
    "breadcrumbs.enabled": false,
    "cSpell.language": "en-GB",
    "cSpell.diagnosticLevel": "Hint",
    "extensions.ignoreRecommendations": true,
    "eslint.run": "onSave",
    "files.autoSaveDelay": 10000,
    "files.autoSave": "off",
    "files.exclude": {
        "**/__pycache__": true
    },
    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "notebook.insertToolbarLocation": "notebookToolbar",
    "notebook.showCellStatusBar": "hidden",
    "notebook.globalToolbar": false,
    "notebook.consolidatedRunButton": true,
    "notebook.output.fontFamily": "DM Mono",
    "notebook.output.fontSize": 12,
    "notebook.output.scrolling": true,
    "notebook.markup.fontSize": 13,
    "notebook.cellToolbarLocation": {
        "jupyter-notebook": "hidden"
    },
    "php.validate.executablePath": "/Applications/XAMPP/xamppfiles/bin/php",
    "prettier.jsxSingleQuote": true,
    "prettier.singleQuote": true,
    "prettier.tabWidth": 4,
    "scm.diffDecorations": "none",
    "sqltools.useNodeRuntime": true,
    "sqltools.format": {
        "language": "sql",
        "linesBetweenQueries": 2,
        "reservedWordCase": "upper"
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "cucumberautocomplete.strictGherkinCompletion": true,
    "cucumberautocomplete.steps": ["src/step-definitions/*.ts"],
    "[feature]": {
        "editor.defaultFormatter": "alexkrechik.cucumberautocomplete"
    }
}
