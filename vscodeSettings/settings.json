{
    "security.workspace.trust.untrustedFiles": "open",
    // ------------------------------
    // window
    // ------------------------------
    "window.commandCenter": false,
    "window.zoomLevel": -0.5,
    "window.title": "${activeEditorMedium}",
    "window.titleSeparator": "  —  ",
    "explorer.compactFolders": false,
    // ------------------------------
    // workbench
    // ------------------------------
    "workbench.colorTheme": "Catppuccin Frappé",
    "workbench.tree.indent": 36,
    "workbench.editor.wrapTabs": true,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.editor.decorations.badges": true,
    "workbench.editor.decorations.colors": true,
    "workbench.startupEditor": "none",
    "workbench.editorAssociations": {
        "*.db": "default"
    },
    // ------------------------------
    // workbench customisations
    // ------------------------------
    "workbench.colorCustomizations": {
        "editorInlayHint.background": "#2f3a45",
        "editorInlayHint.foreground": "#6e7e99",
        "notebook.editorBackground": "#2a2c33",

        "[Catppuccin Frappé]": {
            //"activityBar.foreground": "#399cb0",
            "activityBar.inactiveForeground": "#555a78",
            "statusBarItem.remoteBackground": "#444860",
            "statusBarItem.remoteForeground": "#fff",
            "tab.activeForeground": "#e7e7e7",
            "tab.activeBackground": "#555a78",
            "editorCursor.foreground": "#ffb700",
            "editorLineNumber.activeForeground": "#fff",
            "editorLineNumber.foreground": "#606686",
            "editorCursor.background": "#1d1e29",
            "terminalCursor.foreground": "#ffc415",
            "editor.lineHighlightBackground": "#36394b"
        }
    },
    // ------------------------------
    // editor customisations
    // ------------------------------
    "editor.formatOnSave": true,
    "editor.fontFamily": " 'JetBrainsMono Nerd Font', 'Lekton Nerd Font Mono'",
    "editor.linkedEditing": true,
    "editor.defaultColorDecorators": true,
    "editor.minimap.scale": 1,
    "editor.lineHeight": 23,
    "editor.fontSize": 13,
    "editor.fontWeight": "100",
    "editor.cursorStyle": "block",
    "editor.occurrencesHighlight": "singleFile",
    "editor.cursorBlinking": "smooth",
    "editor.insertSpaces": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.bracketPairColorization.enabled": false,
    "editor.detectIndentation": false,
    "editor.guides.bracketPairs": true,
    "editor.suggestOnTriggerCharacters": true,
    "editor.suggest.localityBonus": true,
    "editor.fontLigatures": true,
    "editor.autoClosingQuotes": "languageDefined",
    "editor.suggestSelection": "first",
    //"editor.lineNumbers": "relative",
    "editor.tokenColorCustomizations": {
        "comments": "#5f7191"
    },
    "catppuccin.accentColor": "blue",
    "terminal.integrated.fontFamily": "Lekton Nerd Font Mono",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.inheritEnv": false,
    "emmet.showSuggestionsAsSnippets": true,
    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "files.associations": {
        "*tmpl": "html"
    },
    // ------------------------------
    // per language customisations
    // ------------------------------
    "[json]": {
        "editor.tabSize": 4,
        "editor.suggest.insertMode": "replace"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.tabSize": 4
    },
    "[css]": {
        "editor.suggest.insertMode": "replace",
        "editor.tabSize": 4
    },
    "[javascript]": {
        "editor.maxTokenizationLineLength": 2500,
        "editor.tabSize": 4,
        "prettier.tabWidth": 4
    },
    "[sql]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "mtxr.sqltools"
    },
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
        "editor.tabSize": 4
    },
    "[python]": {
        "editor.tabSize": 4,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "gitlens.codeLens.symbolScopes": ["!Module"],
        "editor.wordBasedSuggestions": "off"
    },
    // ------------------------------
    // misc
    // ------------------------------
    "breadcrumbs.enabled": false,
    "cSpell.language": "en-GB",
    "cSpell.diagnosticLevel": "Hint",
    "extensions.ignoreRecommendations": true,
    "eslint.run": "onSave",
    "files.autoSaveDelay": 10000,
    "files.autoSave": "off",
    "files.exclude": {
        "**/__pycache__": true
    },
    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "notebook.insertToolbarLocation": "notebookToolbar",
    "notebook.showCellStatusBar": "hidden",
    "notebook.globalToolbar": false,
    "notebook.consolidatedRunButton": true,
    "notebook.output.fontFamily": "DM Mono",
    "notebook.output.fontSize": 11,
    "notebook.output.scrolling": true,
    "notebook.markup.fontSize": 13,
    "notebook.cellToolbarLocation": {
        "jupyter-notebook": "hidden"
    },
    "php.validate.executablePath": "/Applications/XAMPP/xamppfiles/bin/php",
    "prettier.jsxSingleQuote": true,
    "prettier.singleQuote": true,
    "prettier.tabWidth": 4,
    "scm.diffDecorations": "none",
    "sqltools.useNodeRuntime": true,
    "sqltools.format": {
        "language": "sql",
        "linesBetweenQueries": 2,
        "reservedWordCase": "upper"
    },
    "typescript.updateImportsOnFileMove.enabled": "always"
}
