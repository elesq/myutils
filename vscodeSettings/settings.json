{
    "security.workspace.trust.untrustedFiles": "open",

    // ***************************
    // globals and basics
    // ***************************
    "window.zoomLevel": -1,
    "window.titleBarStyle": "custom",
    "explorer.compactFolders": false,
    "debug.allowBreakpointsEverywhere": true,
    "editor.minimap.scale": 2,
    "gitlens.showWelcomeOnInstall": false,
    "material-icon-theme.showWelcomeMessage": false,
    // ***************************
    // workbench
    // ***************************
    "workbench.tree.indent": 32,
    "workbench.editor.wrapTabs": true,
    "workbench.editor.decorations.badges": true,
    "workbench.editor.decorations.colors": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "none",
    "workbench.colorCustomizations": {
        "[Min Dark]": {
            "sideBar.border": "#393737",
            "activityBar.foreground": "#00ffea",
            "activityBar.inactiveForeground": "#646363",
            "activityBarBadge.background": "#ff0000",
            "statusBar.foreground": "#9ccbd1",
            // intellisense
            "editorSuggestWidget.selectedBackground": "#305183",
            // separators
            "separators.interfaces.borderColor": "#373a47",
            "separators.methods.borderColor": "#373a47",
            "separators.functions.borderColor": "#373a47",
            "separators.constructors.borderColor": "#373a47",
            "separators.namespaces.borderColor": "#373a47",
            "separators.enums.borderColor": "#373a47",
            "separators.structs.borderColor": "#373a47",
            "separators.classes.borderColor": "#373a47",
            // editor
            "tab.activeBorder": "#00ffea",
            "tab.activeBackground": "#292929",
            "editorLineNumber.foreground": "#474444",
            "editor.lineHighlightBackground": "#2d2b2b",
            "editorCursor.foreground": "#00ffea",
            "editorCursor.background": "#353755",
            // panel
            "panelTitle.activeForeground": "#00e5d2",
            // terminal
            "terminal.foreground": "#7e878b",
            "terminalCursor.foreground": "#ffae00"
        },
        "[Electronic Moonlight]": {
            "editorSuggestWidget.selectedBackground": "#305183",
            "separators.classes.borderColor": "#2b3867",
            "separators.interfaces.borderColor": "#2b3867",
            "separators.methods.borderColor": "#2b3867",
            "separators.functions.borderColor": "#2b3867",
            "separators.constructors.borderColor": "#2b3867",
            "separators.namespaces.borderColor": "#2b3867",
            "separators.enums.borderColor": "#2b3867",
            "separators.structs.borderColor": "#2b3867",
            "tab.activeBorder": "#594c86",
            "tab.activeBackground": "#352c53",
            "activityBar.background": "#181b2b",
            "editor.background": "#232537",
            //"editorCursor.foreground": "#05cdcd",
            "editorCursor.foreground": "#00ffea",
            "editorCursor.background": "#353755",
            "editorLineNumber.activeForeground": "#00eaff",
            "sideBar.border": "#2b3b5d",
            // panels
            "panel.border": "#457292",
            "panel.background": "#2e3042",
            "terminal.border": "#457292",
            "terminal.background": "#2e3042",
            "terminalCursor.foreground": "#ffae00",
            // terminal color overrides
            //"terminal.ansiCyan": "#ff757f"
            "terminal.ansiCyan": "#56b6c2",
            "terminal.ansiBrightCyan": "#ff757f",
            "terminal.foreground": "#a7a7e5"
        },
        "[Electron]": {
            "sideBar.border": "#253449"
        }
    },
    // ***************************
    // editor general settings
    // ***************************
    "editor.fontFamily": " 'Lekton Nerd Font Mono', 'InconsolataGo Nerd Font Mono', 'Operator Mono Lig', Menlo, Monaco",
    "editor.lineHeight": 23,
    "editor.fontSize": 15,
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 15,
    "editor.cursorBlinking": "smooth",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.linkedEditing": true,
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.bracketPairs": true,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.tokenColorCustomizations": {
        // **************************
        // universal overrides
        // **************************
        "textMateRules": [
            {
                "scope": "string.interpolated, string.quoted.double.go",
                "settings": {
                    "fontStyle": "italic"
                }
            }
        ],

        // ***************************
        // monokai pro customisations.
        // ***************************
        "[Monokai Pro][Monokai Pro (Filter Octagon)]": {
            "textMateRules": [
                {
                    "scope": "variable.other.readwrite.js, variable.other.property.js, variable.other.object.js",
                    "settings": {
                        "foreground": "#ced0d4"
                    }
                },
                {
                    "scope": "meta.object-literal.key.js",
                    "settings": {
                        "foreground": "#deaae6"
                    }
                }
            ]
        },

        "[Electronic Moonlight]": {
            "textMateRules": [
                {
                    "scope": "meta.brace.round.js, meta.function-call.without-arguments.js, meta.new-class.without-arguments.js",
                    "settings": {
                        //"foreground": "#ec97e3"
                    }
                }
            ]
        },

        "[Min Dark]": {
            "textMateRules": [
                {
                    "scope": "string.quoted.single.js, string.quoted.double.js, string.quoted.double.html",
                    "settings": {
                        "foreground": "#59b2b2"
                        //"foreground": "#91ba75"
                    }
                },
                {
                    "scope": "string.quoted.double.json",
                    "settings": {
                        "foreground": "#1cf4e2"
                        //"foreground": "#91ba75"
                    }
                }
            ]
        }
    },
    "javascript.format.insertSpaceBeforeFunctionParenthesis": false,
    "javascript.format.semicolons": "insert",
    // *****************************
    // terminal
    // *****************************
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "terminal.integrated.defaultLocation": "editor",
    "terminal.integrated.tabs.enabled": false,
    // *****************************
    // Settings for Go programming
    // *****************************
    "go.toolsManagement.autoUpdate": true,
    "[go]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.formatOnSave": true
    },
    "gopls": {
        "analyses": {
            "composites": false
        }
    },
    // *****************************
    // Settings for html emmet css
    // *****************************
    "[html]": {
        //"editor.defaultFormatter": "vscode.html-language-features",
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    "emmet.showSuggestionsAsSnippets": true,
    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "files.associations": {
        "*tmpl": "html"
    },
    // *****************************
    // Settings for solidity
    // *****************************
    "[solidity]": {},
    // *****************************
    // javascript language support
    // *****************************
    "[svelte]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "svelte.svelte-vscode",
        "separators.enabledSymbols": ["Classes", "Functions", "Methods"],
        "separators.maxDepth": 1
    },
    "[javascript]": {
        "editor.quickSuggestions": true,
        "editor.suggestOnTriggerCharacters": true,
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "separators.enabledSymbols": ["Classes", "Functions", "Methods"],
        "separators.maxDepth": 1,
        "editor.language.colorizedBracketPairs": [
            ["[", "]"],
            ["(", ")"]
        ]
    },
    "[json]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
        "editor.suggest.insertMode": "replace",
        "gitlens.codeLens.scopes": ["document"]
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.preferences.quoteStyle": "single",
    "editor.detectIndentation": false,
    "prettier.jsxSingleQuote": true,
    "prettier.singleQuote": true,
    "autoimport.filesToScan": "**/*.{ts,tsx,js,jsx}",
    "svelte.enable-ts-plugin": true,
    "files.trimTrailingWhitespace": true,
    "prettier.tabWidth": 4,
    "auto-close-tag.activationOnLanguage": ["html", "svelte"],
    "typescript.updateImportsOnFileMove.enabled": "always",
    "workbench.colorTheme": "Min Dark",
    "explorer.confirmDragAndDrop": false
}

