{
  "security.workspace.trust.untrustedFiles": "open",
  "window.zoomLevel": -0.5,
  "window.title": "${activeEditorMedium}",
  "window.titleSeparator": "  —  ",
  "workbench.tree.indent": 24,
  "workbench.editor.wrapTabs": true,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.editor.decorations.badges": true,
  "workbench.editor.decorations.colors": true,
  "workbench.startupEditor": "none",
  "workbench.editorAssociations": {
    "*.db": "default"
  },
  "workbench.colorCustomizations": {
    "editorInlayHint.background": "#2f3a45",
    "editorInlayHint.foreground": "#6e7e99",
    "separators.functions.borderColor": "#464b5f",
    "separators.classes.borderColor": "#464b5f",
    "separators.constructors.borderColor": "#464b5f",
    "separators.methods.borderColor": "#464b5f",
    "separators.structs.borderColor": "#464b5f",
    "separators.interfaces.borderColor": "#464b5f",

    "[React Theme]": {
      "panel.border": "#515766",
      "activityBar.background": "#262930",
      "activityBar.inactiveForeground": "#555",
      "sideBar.background": "#262930",
      "sideBarSectionHeader.background": "#262930",
      "editor.lineHighlightBackground": "#2c2f38",
      "editorLineNumber.foreground": "#666",
      "editorLineNumber.activeForeground": "#ffffff"
    },

    "[★★★★★ DARCULA ★★]": {
      "editor.lineHighlightBorder": "#393939",
      "editor.lineHighlightBackground": "#343434"
    },

    "[★★★★★ DARCULA ★★★]": {
      "editor.lineHighlightBorder": "#282828",
      "editor.lineHighlightBackground": "#323232",
      "sideBarSectionHeader.background": "#2f3131",
      "sideBar.background": "#2f3131",
      "list.inactiveSelectionBackground": "#3a3d3d",
      "panel.border": "#787878",
      "statusBar.border": "#383838",
      "editorCursor.foreground": "#00fff2",
      "editorCursor.background": "#000000"
    },

    "[poimandres]": {
      "list.activeSelectionBackground": "#0f435b",
      "list.focusBackground": "#377493",
      "editor.lineHighlightBackground": "#252838",
      "editorCursor.foreground": "#ffa200",
      "sideBar.border": "#1f3e48",
      "panel.border": "#2a5462"
    },

    "[Chogori Darkest Orange]": {
      "activityBarBadge.foreground": "#e9dad6",
      "activityBarBadge.background": "#e12b02",
      "statusBar.border": "#1b1d24",
      "statusBar.background": "#313648",
      "sideBar.border": "#373a45",
      "editorLineNumber.foreground": "#455c69",
      "editorLineNumber.activeForeground": "#fff",
      "editor.lineHighlightBorder": "#2e2f37",
      "editor.lineHighlightBackground": "#272830",
      "editorCursor.foreground": "#00ddff",
      "terminal.foreground": "#8998a7",
      "tab.activeBackground": "#54443e",
      "tab.inactiveBackground": "#272930",
      "editor.background": "#272930",
      "terminal.background": "#272930",
      "panel.background": "#272930",
      "panel.border": "#373a45",
      "editorSuggestWidget.selectedBackground": "#cf4906",
      "editorSuggestWidget.focusHighlightForeground": "#fff",
      "editorSuggestWidget.highlightForeground": "#fff",
      // python specific
      "notebook.outputContainerBackgroundColor": "#2a2f38"
    }
  },

  //"editor.fontFamily": " 'Azeret Mono', 'Cutive Mono', 'Operator Mono Lig', 'Lekton Nerd Font Mono'",
  "editor.fontFamily": " 'JetBrainsMono Nerd Font', 'Lekton Nerd Font Mono'",
  "editor.linkedEditing": true,
  "editor.defaultColorDecorators": true,
  "editor.minimap.scale": 1,
  "editor.lineHeight": 23,
  "editor.fontSize": 13,
  "editor.tabSize": 2,
  "editor.fontWeight": "100",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 15,
  "editor.occurrencesHighlight": "singleFile",
  "editor.cursorBlinking": "smooth",
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.bracketPairColorization.enabled": false,
  "editor.detectIndentation": false,
  "editor.guides.bracketPairs": true,
  "editor.suggestOnTriggerCharacters": true,
  "editor.suggest.localityBonus": true,
  "editor.fontLigatures": true,
  "editor.autoClosingQuotes": "languageDefined",
  "editor.suggestSelection": "first",
  "editor.tokenColorCustomizations": {
    "comments": "#697ea0",
    // "strings": "#b19f87",

    // remove italics
    "textMateRules": [
      {
        "scope": [
          "comment",
          "comment.block",
          "comment.block.documentation",
          "comment.line",
          "constant",
          "constant.character",
          "constant.character.escape",
          "constant.numeric",
          "constant.numeric.integer",
          "constant.numeric.float",
          "constant.numeric.hex",
          "constant.numeric.octal",
          "constant.other",
          "constant.regexp",
          "constant.rgb-value",
          "emphasis",
          "entity",
          "entity.name",
          "entity.name.class",
          "entity.name.function",
          "entity.name.method",
          "entity.name.section",
          "entity.name.selector",
          "entity.name.tag",
          "entity.name.type",
          "entity.other",
          "entity.other.attribute-name",
          "entity.other.inherited-class",
          "invalid",
          "invalid.deprecated",
          "invalid.illegal",
          "keyword",
          "keyword.control",
          "keyword.operator",
          "keyword.operator.new",
          "keyword.operator.assignment",
          "keyword.operator.arithmetic",
          "keyword.operator.logical",
          "keyword.other",
          "markup",
          "markup.bold",
          "markup.changed",
          "markup.deleted",
          "markup.heading",
          "markup.inline.raw",
          "markup.inserted",
          "markup.italic",
          "markup.list",
          "markup.list.numbered",
          "markup.list.unnumbered",
          "markup.other",
          "markup.quote",
          "markup.raw",
          "markup.underline",
          "markup.underline.link",
          "meta",
          "meta.block",
          "meta.cast",
          "meta.class",
          "meta.function",
          "meta.function-call",
          "meta.preprocessor",
          "meta.return-type",
          "meta.selector",
          "meta.tag",
          "meta.type.annotation",
          "meta.type",
          "punctuation.definition.string.begin",
          "punctuation.definition.string.end",
          "punctuation.separator",
          "punctuation.separator.continuation",
          "punctuation.terminator",
          "storage",
          "storage.modifier",
          "storage.type",
          "string",
          "string.interpolated",
          "string.other",
          "string.quoted",
          "string.quoted.double",
          "string.quoted.other",
          "string.quoted.single",
          "string.quoted.triple",
          "string.regexp",
          "string.unquoted",
          "strong",
          "support",
          "support.class",
          "support.constant",
          "support.function",
          "support.other",
          "support.type",
          "support.type.property-name",
          "support.variable",
          "variable",
          "variable.language",
          "variable.name",
          "variable.other",
          "variable.other.readwrite",
          "variable.parameter"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ],

    "[★★★★★ DARCULA ★★★]": {
      "textMateRules": [
        {
          "scope": "string",
          "settings": {
            "foreground": "#98ddff"
          }
        },
        {
          "scope": "constant.character.format.placeholder",
          "settings": {
            "foreground": "#47ffff"
          }
        }
      ]
    },

    "[Chogori Darkest Orange]": {
      "textMateRules": [
        {
          "scope": "keyword",
          "settings": {
            "foreground": "#e9be00"
            // "fontStyle": "italic"
          }
        },
        {
          "scope": "entity.name.function.decorator",
          "settings": {
            "foreground": "#d0d0d0"
          }
        },
        {
          "scope": "meta.function-call.arguments",
          "settings": {
            //"foreground": "#e84b20"
            // "foreground": "#f15023"
            "foreground": "#e0d4c5",
            "fontStyle": ""
          }
        },
        {
          "scope": "entity.name.function, support.function.builtin, meta.function-call.generic",
          "settings": {
            "fontStyle": ""
          }
        }
      ]
    }
  },
  "terminal.integrated.fontFamily": "Lekton Nerd Font Mono",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.inheritEnv": false,
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "files.associations": {
    "*tmpl": "html"
  },
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.tabSize": 4
  },
  "[css]": {
    "editor.suggest.insertMode": "replace",
    "editor.tabSize": 4
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.wordBasedSuggestions": "currentDocument",
    "gitlens.codeLens.symbolScopes": ["!Module"]
  },
  "[sql]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "mtxr.sqltools"
  },
  // "[go]": {
  //   "editor.defaultFormatter": "golang.go",
  //   "editor.tabSize": 4,
  //   "editor.insertSpaces": false,
  //   "editor.formatOnSave": true,
  //   "editor.codeActionsOnSave": {
  //     "source.organizeImports": "always"
  //   }
  // },
  "[c][cpp]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true,
    "editor.wordBasedSuggestions": "currentDocument",
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true
  },
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "files.autoSaveDelay": 10000,
  "files.autoSave": "off",
  "extensions.ignoreRecommendations": true,
  "workbench.iconTheme": "vscode-icons",
  "eslint.run": "onSave",
  "scm.diffDecorations": "none",
  "sqltools.format": {
    "language": "sql",
    "linesBetweenQueries": 2,
    "reservedWordCase": "upper"
  },
  "files.exclude": {
    "**/__pycache__": true
  },
  "explorer.compactFolders": false,
  "cSpell.language": "en-GB",
  "cSpell.userWords": [
    "Chogori",
    "Color",
    "Colorization",
    "elesq",
    "foolsgold",
    "servemux",
    "snippetbox",
    "sqltools",
    "structs",
    "tmpl",
    "myutils",
    "fastapi"
  ],
  "sqltools.useNodeRuntime": true,
  "workbench.colorTheme": "React Theme",
  "cSpell.ignoreWords": ["htmx"]
}
