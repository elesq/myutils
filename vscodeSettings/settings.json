{
    "security.workspace.trust.untrustedFiles": "open",
    // window
    "window.commandCenter": false,
    "window.zoomLevel": -0.4,
    "window.title": "${activeEditorMedium}",
    "window.titleSeparator": "  —  ",
    "explorer.compactFolders": false,
    // workbench
    "workbench.colorTheme": "Catppuccin Frappé",
    "workbench.tree.indent": 36,
    "workbench.editor.wrapTabs": true,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.editor.decorations.badges": true,
    "workbench.editor.decorations.colors": true,
    "workbench.startupEditor": "none",
    "workbench.editorAssociations": {
        "*.db": "default"
    },
    "workbench.colorCustomizations": {
        "editorInlayHint.background": "#2f3a45",
        "editorInlayHint.foreground": "#6e7e99",
        "notebook.editorBackground": "#2a2c33",

        "[Catppuccin Frappé]": {
            //"activityBar.foreground": "#399cb0",
            "activityBar.inactiveForeground": "#555a78",
            "statusBarItem.remoteBackground": "#444860",
            "statusBarItem.remoteForeground": "#fff",
            "tab.activeForeground": "#e7e7e7",
            "tab.activeBackground": "#555a78",
            "editorCursor.foreground": "#ffb700",
            "editorLineNumber.activeForeground": "#fff",
            "editorLineNumber.foreground": "#606686",
            "editorCursor.background": "#1d1e29",
            "terminalCursor.foreground": "#ffc415",
            "editor.lineHighlightBackground": "#36394b"
        },

        "[Chogori Darkest Blue]": {
            "titleBar.activeBackground": "#23252c",
            "activityBar.border": "#313244",
            "activityBar.background": "#23252b",
            "activityBar.inactiveForeground": "#515866",
            "panel.border": "#38394d",
            "panelTitle.inactiveForeground": "#474f60",
            "statusBarItem.remoteBackground": "#465260",
            "statusBarItem.remoteForeground": "#fff",
            "statusBarItem.remoteHoverBackground": "#17d1ff",
            "statusBarItem.remoteHoverForeground": "#000000",
            "sideBarSectionHeader.background": "#23252c",
            "list.inactiveSelectionBackground": "#313445",
            "list.activeSelectionBackground": "#313445",
            "list.focusOutline": "#31343a",
            "list.focusBackground": "#272a33",
            "list.hoverBackground": "#272a33",
            "statusBar.border": "#404258",
            "statusBar.background": "#38394d",
            "statusBar.foreground": "#acacd9",
            "sideBar.foreground": "#8a8aa8",
            "sideBar.background": "#23252c",
            "sideBar.border": "#38394d",
            "breadcrumb.background": "#343640",
            "breadcrumb.foreground": "#8994ac",
            "tab.border": "#1d1e24",
            "tab.activeBackground": "#44455d",
            "tab.inactiveBackground": "#2d2e3a",
            "tab.inactiveForeground": "#779",
            "tab.hoverBackground": "#393a50",
            "tab.hoverForeground": "#69b1ff",
            "editorGroupHeader.tabsBackground": "#23252c",
            "editorLineNumber.foreground": "#46505a",
            "editorLineNumber.activeForeground": "#fff",
            "editorCursor.foreground": "#1fffbc",
            "editorCursor.background": "#111",
            "editorHoverWidget.background": "#2d3041",
            "editorHoverWidget.border": "#525977",
            "editorSuggestWidget.background": "#2d3041",
            "editorSuggestWidget.selectedBackground": "#4b485f",
            "editorSuggestWidget.focusHighlightForeground": "#20f0ff",
            "editorSuggestWidget.highlightForeground": "#20f0ff",
            "editor.hoverHighlightBackground": "#0f416dc6",
            "editor.background": "#2a2c34",
            "terminal.foreground": "#a1b5c5",
            "terminal.background": "#2a2c34",
            "panel.background": "#2a2c34"
        }
    },

    "editor.fontFamily": " 'JetBrainsMono Nerd Font', 'Lekton Nerd Font Mono'",
    "editor.linkedEditing": true,
    "editor.defaultColorDecorators": true,
    "editor.minimap.scale": 1,
    "editor.lineHeight": 23,
    "editor.fontSize": 13,
    "editor.fontWeight": "100",
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 15,
    "editor.occurrencesHighlight": "singleFile",
    "editor.cursorBlinking": "smooth",
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.bracketPairColorization.enabled": false,
    "editor.detectIndentation": false,
    "editor.guides.bracketPairs": true,
    "editor.suggestOnTriggerCharacters": true,
    "editor.suggest.localityBonus": true,
    "editor.fontLigatures": true,
    "editor.autoClosingQuotes": "languageDefined",
    "editor.suggestSelection": "first",
    // "editor.lineNumbers": "relative",
    "editor.tokenColorCustomizations": {
        "comments": "#5f7191",
        // "comments": "#455f8d",

        "[Chogori Darkest Blue]": {
            "textMateRules": [
                {
                    "scope": "string",
                    "settings": {
                        "foreground": "#50caec"
                    }
                },
                {
                    "scope": [
                        "keyword.control.export.js",
                        "keyword.control.import.js",
                        "keyword.control.import"
                    ],
                    "settings": {
                        "foreground": "#dc9e18"
                        // "fontStyle": "bold"
                    }
                }
            ]
        }
    },
    "catppuccin.accentColor": "blue",
    "terminal.integrated.fontFamily": "Lekton Nerd Font Mono",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.inheritEnv": false,
    "emmet.showSuggestionsAsSnippets": true,
    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "files.associations": {
        "*tmpl": "html"
    },
    "[json]": {
        "editor.tabSize": 2,
        "editor.suggest.insertMode": "replace"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 4
    },
    "[css]": {
        "editor.suggest.insertMode": "replace",
        "editor.tabSize": 4
    },
    "[javascript]": {
        "editor.maxTokenizationLineLength": 2500,
        "prettier.tabWidth": 2
    },
    "[sql]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "mtxr.sqltools"
    },
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
        "editor.tabSize": 4
    },
    "[python]": {
        "editor.tabSize": 4,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "gitlens.codeLens.symbolScopes": ["!Module"],
        "editor.wordBasedSuggestions": "off"
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "prettier.jsxSingleQuote": true,
    "prettier.singleQuote": true,
    "prettier.tabWidth": 4,
    "files.autoSaveDelay": 10000,
    "files.autoSave": "off",
    "extensions.ignoreRecommendations": true,
    "eslint.run": "onSave",
    "scm.diffDecorations": "none",
    "sqltools.format": {
        "language": "sql",
        "linesBetweenQueries": 2,
        "reservedWordCase": "upper"
    },
    "sqltools.useNodeRuntime": true,
    "cSpell.language": "en-GB",
    "cSpell.diagnosticLevel": "Hint",
    "files.exclude": {
        "**/__pycache__": true
    },
    "editor.tabSize": 2,

    "breadcrumbs.enabled": false,
    "notebook.insertToolbarLocation": "notebookToolbar",
    "notebook.showCellStatusBar": "hidden",
    "notebook.cellToolbarLocation": {
        "jupyter-notebook": "hidden"
    },
    "notebook.globalToolbar": false,
    "notebook.consolidatedRunButton": true,
    "notebook.output.fontFamily": "DM Mono",
    "notebook.output.fontSize": 11,
    "notebook.output.scrolling": true,
    "notebook.markup.fontSize": 13,
    "php.validate.executablePath": "/Applications/XAMPP/xamppfiles/bin/php"
}

