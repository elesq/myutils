{
    "security.workspace.trust.untrustedFiles": "open",
    // ------------------------------
    // window
    // ------------------------------
    "window.commandCenter": false,
    "window.zoomLevel": -0.5,
    "window.title": "${activeEditorMedium}",
    "window.titleSeparator": "  —  ",
    "explorer.compactFolders": false,
    "workbench.tree.indent": 36,
    "workbench.editor.wrapTabs": true,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.editor.decorations.badges": true,
    "workbench.editor.decorations.colors": true,
    "workbench.startupEditor": "none",
    "workbench.editorAssociations": {
        "*.db": "default"
    },
    // ------------------------------
    // workbench customisations
    // ------------------------------
    "workbench.colorCustomizations": {
        "editorInlayHint.background": "#2f3a45",
        "editorInlayHint.foreground": "#6e7e99",
        "notebook.editorBackground": "#2a2c33",

        "[Catppuccin Frappé]": {
            //"activityBar.foreground": "#399cb0",
            "activityBar.inactiveForeground": "#555a78",
            "statusBarItem.remoteBackground": "#444860",
            "statusBarItem.remoteForeground": "#fff",
            "tab.activeForeground": "#e7e7e7",
            "tab.activeBackground": "#555a78",
            "editorCursor.foreground": "#ffb700",
            "editorLineNumber.activeForeground": "#fff",
            "editorLineNumber.foreground": "#595e7a",
            "editorCursor.background": "#1d1e29",
            "terminalCursor.foreground": "#ffc415",
            "editor.lineHighlightBackground": "#343749",
            "editor.background": "#2d3143",
            "editorGutter.background": "#2d3143",
            "panel.border": "#4c505d"
        },

        "[habamix]": {
            "titleBar.activeBackground": "#252526",
            "activityBar.border": "#3e3e40",
            "activityBar.background": "#252526",
            "sideBar.foreground": "#889198",
            "sideBar.border": "#39393b",
            "panel.background": "#1c1c1c",
            "terminal.background": "#1c1c1c",
            "terminalCursor.foreground": "#67b0e0",
            "editorCursor.foreground": "#ffb70e",
            "editorLineNumber.foreground": "#404248",
            "editorLineNumber.activeForeground": "#a6e6f5",
            "tab.inactiveBackground": "#1e1e1e",
            "tab.activeBackground": "#404244",
            "tab.activeBorder": "#d38b2c",
            // "editorHoverWidget.background": "#303942",
            // "editorHoverWidget.background": "#2c302d",
            "editorHoverWidget.background": "#1d1f21",
            // "editorHoverWidget.border": "#779082"
            "editorHoverWidget.border": "#c0791c"
        },

        "[Solarized Monochrome Light]": {
            "titleBar.activeBackground": "#d1cdc0",
            "activityBar.background": "#d1cdc0",
            "activityBar.border": "#bbbbb7",
            "activityBar.activeBorder": "#d1cdc0",
            "activityBar.inactiveForeground": "#9d9a8e",
            "sideBar.background": "#d8d4c6",
            "sideBar.border": "#bbbbb7",
            "list.inactiveSelectionBackground": "#c6c4b9",
            "list.activeSelectionBackground": "#c6c4b9",
            "list.focusAndSelectionOutline": "#c4c2b7",
            "list.focusBackground": "#ceccc0",
            "list.focusOutline": "#e48525",
            "editorGroupHeader.tabsBackground": "#d1cdc0",
            "tab.inactiveBackground": "#c6c3b7",
            "tab.activeBackground": "#eae4d1",
            "editor.background": "#e0dac9",
            "editorGutter.background": "#e0dac9",
            "editor.selectionBackground": "#e0d9c3",
            "editorLineNumber.foreground": "#c2c1b4",
            "editor.lineHighlightBackground": "#e2dcc8",
            "editorStickyScrollHover.background": "#e0d9c3",
            "editorStickyScroll.border": "#cdc4a8",
            "editorStickyScroll.shadow": "#ded4b8"
        }
    },
    // ------------------------------
    // apc customisations
    // ------------------------------
    "apc.font.family": "Dank Mono",
    // ------------------------------
    // editor customisations
    // ------------------------------
    "editor.formatOnSave": true,
    "editor.fontFamily": " 'Dank Mono', 'JetBrainsMono Nerd Font', 'Lekton Nerd Font Mono'",
    "editor.linkedEditing": true,
    "editor.defaultColorDecorators": true,
    "editor.minimap.autohide": true,
    "editor.minimap.scale": 1,
    "editor.lineHeight": 23,
    "editor.fontSize": 14,
    "editor.fontWeight": "100",
    "editor.cursorStyle": "block",
    "editor.occurrencesHighlight": "singleFile",
    "editor.cursorBlinking": "smooth",
    "editor.insertSpaces": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.bracketPairColorization.enabled": false,
    "editor.detectIndentation": false,
    "editor.guides.bracketPairs": true,
    "editor.suggestOnTriggerCharacters": true,
    "editor.suggest.localityBonus": true,
    "editor.fontLigatures": true,
    "editor.autoClosingQuotes": "languageDefined",
    "editor.suggestSelection": "first",
    //"editor.lineNumbers": "relative",
    "editor.tokenColorCustomizations": {
        //"comments": "#5f7191"
        "comments": "#52555a",
        "[Catppuccin Frappé]": {
            "textMateRules": [
                {
                    "scope": [
                        "comment",
                        "comment.block",
                        "comment.block.documentation",
                        "comment.line"
                    ],
                    "settings": {
                        "foreground": "#5d7386"
                    }
                }
            ]
        },

        "[habamix]": {
            "textMateRules": [
                // {
                //     "scope": "text.html.derivative",
                //     "settings": {
                //         "foreground": "#edc191"
                //     }
                // }
            ]
        }
    },
    "catppuccin.accentColor": "blue",
    "terminal.integrated.fontFamily": "Lekton Nerd Font Mono",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.inheritEnv": false,
    "emmet.showSuggestionsAsSnippets": true,
    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "files.associations": {
        "*tmpl": "html",
        "*.tmpl": "html"
    },
    // ------------------------------
    // per language customisations
    // ------------------------------
    "[css]": {
        "editor.suggest.insertMode": "replace",
        "editor.tabSize": 4
    },
    "[go]": {
        "editor.defaultFormatter": "golang.go",
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always"
        }
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.tabSize": 4
    },
    "[javascript]": {
        "editor.maxTokenizationLineLength": 2500,
        "editor.tabSize": 2,
        "prettier.tabWidth": 2
    },
    "[json]": {
        "editor.tabSize": 4,
        "editor.suggest.insertMode": "replace"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
        "prettier.jsxSingleQuote": true,
        "prettier.tabWidth": 2
    },
    "[python]": {
        "editor.tabSize": 4,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "gitlens.codeLens.symbolScopes": ["!Module"],
        "editor.wordBasedSuggestions": "off"
    },
    "[sql]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "mtxr.sqltools"
    },
    // ------------------------------
    // misc
    // ------------------------------
    "breadcrumbs.enabled": false,
    "cSpell.language": "en-GB",
    "cSpell.diagnosticLevel": "Hint",
    "extensions.ignoreRecommendations": true,
    "eslint.run": "onSave",
    "files.autoSaveDelay": 10000,
    "files.autoSave": "off",
    "files.exclude": {
        "**/__pycache__": true
    },
    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "notebook.insertToolbarLocation": "notebookToolbar",
    "notebook.showCellStatusBar": "hidden",
    "notebook.globalToolbar": false,
    "notebook.consolidatedRunButton": true,
    "notebook.output.fontFamily": "DM Mono",
    "notebook.output.fontSize": 11,
    "notebook.output.scrolling": true,
    "notebook.markup.fontSize": 13,
    "notebook.cellToolbarLocation": {
        "jupyter-notebook": "hidden"
    },
    "php.validate.executablePath": "/Applications/XAMPP/xamppfiles/bin/php",
    "prettier.jsxSingleQuote": true,
    "prettier.singleQuote": true,
    "prettier.tabWidth": 4,
    "scm.diffDecorations": "none",
    "sqltools.useNodeRuntime": true,
    "sqltools.format": {
        "language": "sql",
        "linesBetweenQueries": 2,
        "reservedWordCase": "upper"
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "workbench.colorTheme": "Catppuccin Frappé"
}
