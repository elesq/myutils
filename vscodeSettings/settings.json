{
  "security.workspace.trust.untrustedFiles": "open",
  // ***************************
  // ** globals and basics
  // ***************************
  "window.zoomLevel": -1.1,
  "window.titleBarStyle": "custom",
  "explorer.compactFolders": false,
  "debug.allowBreakpointsEverywhere": true,
  "editor.minimap.scale": 2,
  "gitlens.showWelcomeOnInstall": false,
  "material-icon-theme.showWelcomeMessage": false,
  "terminal.integrated.inheritEnv": false,
  "files.trimTrailingWhitespace": true,
  "explorer.confirmDragAndDrop": false,
  // ***************************
  // ** workbench
  // ***************************
  "workbench.tree.indent": 32,
  "workbench.editor.wrapTabs": true,
  "workbench.editor.decorations.badges": true,
  "workbench.editor.decorations.colors": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.editorAssociations": {
    "*.db": "sqlite-viewer.option"
  },
  "workbench.colorCustomizations": {
    "[Default Dark+]": {
      // app container
      "titleBar.activeBackground": "#242424",
      "activityBar.background": "#242424",
      "activityBar.border": "#191919",
      "statusBar.background": "#242424",
      "sideBar.background": "#242424",
      "sideBar.border": "#373737",
      "sideBar.foreground": "#aab",
      "activityBar.foreground": "#8dbfc4",
      // editor
      "editor.background": "#232323",
      "editorLineNumber.foreground": "#555",
      "tab.activeBackground": "#555",
      "tab.activeBorderTop": "#42a1d4",
      "tab.activeBorder": "#6ac3ed",
      // separators
      "separators.interfaces.borderColor": "#373737",
      "separators.methods.borderColor": "#373737",
      "separators.functions.borderColor": "#373737",
      "separators.constructors.borderColor": "#373737",
      "separators.namespaces.borderColor": "#373737",
      "separators.enums.borderColor": "#373737",
      "separators.structs.borderColor": "#373737",
      "separators.classes.borderColor": "#373737"
    }
  },
  // ***************************
  // ** editor general settings
  // ***************************
  //"editor.fontFamily": " 'Lekton Nerd Font Mono', 'InconsolataGo Nerd Font Mono', 'Operator Mono Lig', Menlo, Monaco",
  "editor.fontFamily": " 'Inconsolata Nerd Font Mono', 'Operator Mono Lig', Menlo, Monaco",
  //"editor.fontFamily": "'Operator Mono Lig', 'Lekton Nerd Font Mono', 'InconsolataGo Nerd Font Mono', Menlo, Monaco",
  //"editor.fontFamily": "'MesloLGS NF'",
  //"editor.fontFamily": "'Monofur Nerd Font'",
  //"editor.fontFamily": "'UbuntuMono Nerd Font'",
  //"editor.fontFamily": "'Hack Nerd Font'",
  //"editor.fontFamily": "'Comic Mono'",

  "editor.tabSize": 2,
  "editor.lineHeight": 21,
  "editor.fontSize": 16,
  "editor.fontWeight": "100",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 27,
  "editor.cursorBlinking": "smooth",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.linkedEditing": true,
  "editor.bracketPairColorization.enabled": false,
  "editor.detectIndentation": false,
  "editor.guides.bracketPairs": true,
  "editor.suggestOnTriggerCharacters": true,
  "editor.suggest.localityBonus": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.tokenColorCustomizations": {
    // **************************
    // ** universal overrides
    // **************************
    "[Default Dark+]": {
      "textMateRules": [
        {
          "scope": "comment",
          "settings": {
            //"foreground": "#4f5467"
            "foreground": "#4c5e53"
          }
        },
        {
          "scope": "entity.name.function",
          "settings": {
            //"foreground": "#b3b38c",
            //"foreground": "#afa96f"
            "foreground": "#77aeb4"
          }
        },
        {
          "scope": "string.quoted, string.template",
          "settings": {
            //"foreground": "#d08031"
            "foreground": "#cb6666"
          }
        }
      ]
    }
  },
  "javascript.format.insertSpaceBeforeFunctionParenthesis": false,
  "javascript.format.semicolons": "insert",
  // *****************************
  // ** terminal
  // *****************************
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.tabs.enabled": false,

  // *****************************
  // ** Settings for python
  // *****************************
  "python.defaultInterpreterPath": "/Users/ed/.pyenv/versions/3.9.1/envs/pydev",
  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-python.python",
    "gitlens.codeLens.symbolScopes": ["!Module"],
    "editor.wordBasedSuggestions": false
  },
  // *****************************
  // ** Settings for html emmet css
  // *****************************
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "files.associations": {
    "*tmpl": "html"
  },
  // ******************************
  // ** javascript language support
  // ******************************
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.quoteStyle": "single",
  "[javascript]": {
    "editor.quickSuggestions": true,
    "editor.suggestOnTriggerCharacters": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "separators.enabledSymbols": ["Classes", "Functions", "Methods"],
    "separators.maxDepth": 1,
    "editor.language.colorizedBracketPairs": [
      ["[", "]"],
      ["(", ")"]
    ]
  },
  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.suggest.insertMode": "replace",
    "gitlens.codeLens.scopes": ["document"]
  },

  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "python.formatting.provider": "black",
  "editor.fontLigatures": true,
  "editor.autoClosingQuotes": "always",
  "window.title": "${activeEditorMedium}",
  "window.titleSeparator": "  â€”  "
}
