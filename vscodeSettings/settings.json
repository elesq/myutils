{
  "security.workspace.trust.untrustedFiles": "open",
  // window
  "window.commandCenter": false,
  "window.zoomLevel": -0.5,
  "window.title": "${activeEditorMedium}",
  "window.titleSeparator": "  â€”  ",
  "explorer.compactFolders": false,
  // workbench
  "workbench.colorTheme": "React Theme",
  "workbench.tree.indent": 36,
  "workbench.editor.wrapTabs": true,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.editor.decorations.badges": true,
  "workbench.editor.decorations.colors": true,
  "workbench.startupEditor": "none",
  "workbench.editorAssociations": {
    "*.db": "default"
  },
  "workbench.colorCustomizations": {
    "editorInlayHint.background": "#2f3a45",
    "editorInlayHint.foreground": "#6e7e99",

    "[React Theme]": {
      "titleBar.activeBackground": "#262930",
      "editorGroupHeader.tabsBackground": "#262930",
      "statusBar.border": "#333a47",
      "statusBar.background": "#2c2f36",
      "statusBar.foreground": "#b0b0b0",
      "panel.border": "#515766",
      "activityBar.border": "#3c404c",
      "activityBar.background": "#21242b",
      "activityBar.inactiveForeground": "#555",
      "sideBar.border": "#3e424f",
      "sideBar.background": "#262930",
      "sideBarSectionHeader.background": "#262930",
      "list.inactiveSelectionForeground": "#fff",
      "list.inactiveSelectionBackground": "#2f323c",
      "sideBar.foreground": "#888f9d",
      "terminal.background": "#2d3039",
      "panel.background": "#2d3039",
      "editor.background": "#2d3039",
      "editorCursor.background": "#2d3039",
      "editorCursor.foreground": "#0eefff",
      "editorHoverWidget.border": "#707070",
      "editor.lineHighlightBackground": "#32333c",
      "editorLineNumber.foreground": "#666",
      "editorLineNumber.activeForeground": "#ffffff",
      "tab.activeBackground": "#585d6c",
      "tab.inactiveBackground": "#2d3039",
      "tab.inactiveForeground": "#7a8194",
      "tab.border": "#444",
      "breadcrumb.background": "#2d3039",
      "breadcrumb.foreground": "#8191b3",
      "editorSuggestWidget.border": "#707070",
      "editorSuggestWidget.background": "#3b3e44",
      "editorSuggestWidget.selectedBackground": "#586269",
      "editorHoverWidget.background": "#373c45",
      "terminal.foreground": "#a6b8c3"
    }
  },

  "editor.fontFamily": " 'JetBrainsMono Nerd Font', 'Lekton Nerd Font Mono'",
  "editor.linkedEditing": true,
  "editor.defaultColorDecorators": true,
  "editor.minimap.scale": 1,
  "editor.lineHeight": 23,
  "editor.fontSize": 13,
  "editor.tabSize": 2,
  "editor.fontWeight": "100",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 15,
  "editor.occurrencesHighlight": "singleFile",
  "editor.cursorBlinking": "smooth",
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.bracketPairColorization.enabled": false,
  "editor.detectIndentation": false,
  "editor.guides.bracketPairs": true,
  "editor.suggestOnTriggerCharacters": true,
  "editor.suggest.localityBonus": true,
  "editor.fontLigatures": true,
  "editor.autoClosingQuotes": "languageDefined",
  "editor.suggestSelection": "first",
  "editor.tokenColorCustomizations": {
    "comments": "#647188",
    // "comments": "#455f8d",

    "[React Theme]": {
      "textMateRules": [
        {
          "scope": [
            "comment.line.double-slash.js",
            "comment.line.number-sign.python"
          ],
          "settings": {
            "foreground": "#647188",
            "fontStyle": ""
          }
        }
      ]
    },

    // remove all italics
    "textMateRules": [
      {
        "scope": [
          "comment",
          "comment.block",
          "comment.block.documentation",
          "comment.line",
          "constant",
          "constant.character",
          "constant.character.escape",
          "constant.numeric",
          "constant.numeric.integer",
          "constant.numeric.float",
          "constant.numeric.hex",
          "constant.numeric.octal",
          "constant.other",
          "constant.regexp",
          "constant.rgb-value",
          "emphasis",
          "entity",
          "entity.name",
          "entity.name.class",
          "entity.name.function",
          "entity.name.method",
          "entity.name.section",
          "entity.name.selector",
          "entity.name.tag",
          "entity.name.type",
          "entity.other",
          "entity.other.attribute-name",
          "entity.other.inherited-class",
          "invalid",
          "invalid.deprecated",
          "invalid.illegal",
          "keyword",
          "keyword.control",
          "keyword.operator",
          "keyword.operator.new",
          "keyword.operator.assignment",
          "keyword.operator.arithmetic",
          "keyword.operator.logical",
          "keyword.other",
          "markup",
          "markup.bold",
          "markup.changed",
          "markup.deleted",
          "markup.heading",
          "markup.inline.raw",
          "markup.inserted",
          "markup.italic",
          "markup.list",
          "markup.list.numbered",
          "markup.list.unnumbered",
          "markup.other",
          "markup.quote",
          "markup.raw",
          "markup.underline",
          "markup.underline.link",
          "meta",
          "meta.block",
          "meta.cast",
          "meta.class",
          "meta.function",
          "meta.function-call",
          "meta.preprocessor",
          "meta.return-type",
          "meta.selector",
          "meta.tag",
          "meta.type.annotation",
          "meta.type",
          "punctuation.definition.string.begin",
          "punctuation.definition.string.end",
          "punctuation.separator",
          "punctuation.separator.continuation",
          "punctuation.terminator",
          "storage",
          "storage.modifier",
          "storage.type",
          "string",
          "string.interpolated",
          "string.other",
          "string.quoted",
          "string.quoted.double",
          "string.quoted.other",
          "string.quoted.single",
          "string.quoted.triple",
          "string.regexp",
          "string.unquoted",
          "strong",
          "support",
          "support.class",
          "support.constant",
          "support.function",
          "support.other",
          "support.type",
          "support.type.property-name",
          "support.variable",
          "variable",
          "variable.language",
          "variable.name",
          "variable.other",
          "variable.other.readwrite",
          "variable.parameter"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "terminal.integrated.fontFamily": "Lekton Nerd Font Mono",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.inheritEnv": false,
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "files.associations": {
    "*tmpl": "html"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 4
  },
  "[css]": {
    "editor.suggest.insertMode": "replace",
    "editor.tabSize": 4
  },
  "[sql]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "mtxr.sqltools"
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "gitlens.codeLens.symbolScopes": ["!Module"],
    "editor.wordBasedSuggestions": "off"
  },
  // "[go]": {
  //   "editor.defaultFormatter": "golang.go",
  //   "editor.tabSize": 4,
  //   "editor.insertSpaces": false,
  //   "editor.formatOnSave": true,
  //   "editor.codeActionsOnSave": {
  //     "source.organizeImports": "always"
  //   }
  // },
  // "[c][cpp]": {
  //   "editor.tabSize": 4,
  //   "editor.defaultFormatter": "ms-vscode.cpptools",
  //   "editor.formatOnSave": true,
  //   "editor.wordBasedSuggestions": "currentDocument",
  //   "editor.suggest.insertMode": "replace",
  //   "editor.semanticHighlighting.enabled": true
  // },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "files.autoSaveDelay": 10000,
  "files.autoSave": "off",
  "extensions.ignoreRecommendations": true,
  "eslint.run": "onSave",
  "scm.diffDecorations": "none",
  "sqltools.format": {
    "language": "sql",
    "linesBetweenQueries": 2,
    "reservedWordCase": "upper"
  },
  "sqltools.useNodeRuntime": true,
  "cSpell.language": "en-GB",
  "cSpell.diagnosticLevel": "Hint",
  "files.exclude": {
    "**/__pycache__": true
  }
}
